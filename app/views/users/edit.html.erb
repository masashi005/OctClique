  <div class = "container">
    <div class = "col-md-8">
     <h2>会員情報編集</h2>
     <table class="table table-hover table-inverse">

      <tbody>
        <%= form_with model: @user do |f| %>
        <tr>
          <td>ユーザーネーム</td>
          <td><%= f.text_field :name, class:'form-control name' %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, class:'form-control email' %></td>
        </tr>

       <div class="form-group">
        <%= f.submit "編集内容を保存", class:"btn btn-secondary" %>
       </div>
      <% end %>

  </div>
